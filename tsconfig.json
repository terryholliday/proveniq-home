{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "firebase-functions/logger": [
        "./types/firebase-functions-logger.d.ts"
      ]
    },
    "typeRoots": [
      "./types",
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    "../shared/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "functions/**/*"
  ]
}
